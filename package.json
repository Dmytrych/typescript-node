{
  "name": "typescript-node",
  "version": "2.1.0",
  "description": "TypeScript template for backend applications.",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/Talento90/typescript-node.git"
  },
  "author": "Talento90",
  "keywords": [
    "typescript",
    "nodejs",
    "backend"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "clean": "rm -rf node_modules coverage dist .nyc_output",
    "coverage": "nyc --exclude dist/test --reporter=html npm run test:all",
    "lint": "eslint",
    "start": "node dist/src/index.js",
    "start:dev": "tsc-watch --onSuccess \"node --inspect=0.0.0.0:5858 dist/index.js\"",
    "test": "npm run build && mocha --exit --recursive dist/test/unit",
    "test:integration": "npm run build && mocha --exit --recursive dist/test/integration",
    "test:all": "npm run build && mocha --exit --recursive dist/test"
  },
  "dependencies": {
    "async": "^3.2.5",
    "axios": "^1.6.8",
    "joi": "^17.12.3",
    "koa": "^2.15.2",
    "koa-bodyparser": "^4.4.1",
    "koa-helmet": "^7.0.2",
    "koa-router": "^12.0.1",
    "pino": "^8.19.0"
  },
  "devDependencies": {
    "@types/async": "^3.0.1",
    "@types/chai": "^4.3.14",
    "@types/joi": "^17.2.3",
    "@types/koa": "^2.0.49",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-helmet": "^6.0.8",
    "@types/koa-router": "^7.0.42",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.5",
    "@types/pino": "^7.0.5",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "chai": "^5.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "mocha": "^10.4.0",
    "nyc": "^15.1.0",
    "prettier": "^3.2.5",
    "sinon": "^17.0.1",
    "supertest": "^6.3.4",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.4.4"
  },
  "engines": {
    "node": ">=20.11.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo 'fix me'"
    }
  }
}
